import 'package:coffee_roastery/service/api_request.dart';
import 'package:coffee_roastery/models/machines.dart';

class MachinesProvider {
  void getMachinesList({
    Function()? beforeSend,
    Function(List<Machines> machine)? onSuccess,
    Function(dynamic error)? onError,
  }) {
    ApiRequest(
            url:
                'http://103.157.218.115/CoffeeRoastery/hs/CoffeeRoastery/V1/CoffeeTool')
        .get(
      beforeSend: () => {if (beforeSend != null) beforeSend()},
      onSuccess: (data) {
        onSuccess!((data as List)
            .map((machineJson) => Machines.fromJson(machineJson))
            .toList());
      },
      onError: (error) => {if (onError != null) onError(error)},
    );
  }
}
